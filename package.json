{
  "version": "0.0.8",
  "license": "MIT",
  "description": "Build an excerpt from a markdown AST",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jwbargsten/mdast-excerpt.git"
  },
  "keywords": [
    "mdast",
    "transform",
    "excerpt",
    "truncate",
    "summary",
    "dot-dot-dot",
    "markdown"
  ],
  "bugs": {
    "url": "https://github.com/jwbargsten/mdast-excerpt/issues"
  },
  "homepage": "https://github.com/jwbargsten/mdast-excerpt#readme",
  "author": "Joachim Bargsten <jw@bargsten.org> (https://bargsten.org)",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest test",
    "fmt": "prettier --write test src",
    "lint": "eslint --fix src test",
    "check-ts": "tsc --noEmit",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {},
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": false,
    "printWidth": 110,
    "endOfLine": "lf",
    "tabWidth": 2
  },
  "name": "mdast-excerpt",
  "module": "dist/mdast-excerpt.esm.js",
  "size-limit": [
    {
      "path": "dist/mdast-excerpt.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/mdast-excerpt.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.5",
    "@size-limit/preset-small-lib": "^5.0.5",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.170",
    "@types/unist": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-jest": "^24.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.3",
    "prettier": "2.4.1",
    "remark": "^14.0.1",
    "remark-html": "^14.0.1",
    "remark-parse": "^10.0.0",
    "remark-stringify": "^10.0.0",
    "size-limit": "^5.0.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.2.0",
    "typescript": "^4.4.3",
    "unified": "^10.1.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  }
}
